			// Test c = pl.test.get(i);
			// System.out.println("pubI=" + c.pubI + " pubStr" + c.pubStr
			// + " getPrivStr()=" + c.getPrivStr()
			// + " getPrivstatfini()=" + c.getPrivstatfini()
			// + " getPrivStatInt()=" + c.getPrivStatInt());
			// }
		} catch (Exception e) {
			System.out.println("Error");
