package xmlSerealization;

import java.io.File;
import java.io.FileInputStream;

import javax.xml.bind.JAXBContext;
import javax.xml.bind.Marshaller;

/**
 * @author orecto
 * 
 */
public class XmlSerealization {
	public static void main(String[] args) {
		try {
			PriceList priceList = new PriceList();
			for (int i = 0; i < 10; i++) {
				Test t = new Test();
				t.pubI = 1;
				priceList.test.add(t);
			}

			JAXBContext context = JAXBContext.newInstance(PriceList.class);
			Marshaller m = context.createMarshaller();
			m.setProperty(Marshaller.JAXB_FORMATTED_OUTPUT, Boolean.TRUE);
			// m.marshal(priceList, System.out);
			m.marshal(priceList, new File("work.xml"));
			System.out.println();

			// FileInputStream fis = new FileInputStream("cofe.xml");
