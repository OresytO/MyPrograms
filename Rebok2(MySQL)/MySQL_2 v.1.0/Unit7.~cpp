#pragma package(smart_init)
#pragma resource "*.dfm"
TFCities *FCities;

void TFCities::CleanForm(){
	FCities->Edit1->Clear();
    FCities->Edit2->Clear();
}

//---------------------------------------------------------------------------
__fastcall TFCities::TFCities(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TFCities::BitBtn1Click(TObject *Sender)
{
	FCities->Visible = false;
}
//---------------------------------------------------------------------------
void __fastcall TFCities::BitBtn2Click(TObject *Sender)
{
	String dataStr = "INSERT INTO `rebok2_db1`.`cities` (cities_id, ";
    String colStr, valueStr = "'', '";

	if(Edit1->Text.IsEmpty()){
    	ShowMessage("¬вед≥ть назву cities");
    	return;
    } else {
    	colStr = "`name`";
        valueStr += Edit1->Text  + '\'';
    }
    if(Edit2->Text.IsEmpty()){
    	ShowMessage("¬вед≥ть поштовий ≥ндекс");
        return;
	} else {
     	colStr += ", zip_code";
        valueStr += ", '" + Edit2->Text + '\'';
    }
    dataStr += colStr + ") VALUES (" + valueStr + ");";

    ADOQuery1->SQL->Clear();
    ADOQuery1->SQL->Add(dataStr.c_str());
    ADOQuery1->ExecSQL();

    FCities->Visible = false;
}
//---------------------------------------------------------------------------
void __fastcall TFCities::FormHide(TObject *Sender)
{
	CleanForm();
}
