package xmlSerealization;

import java.io.File;
import java.io.FileInputStream;

import javax.xml.bind.JAXBContext;
import javax.xml.bind.Marshaller;

/**
 * @author orecto
 * 
 */
public class XmlSerealization {
	public static void main(String[] args) {
		try {
			PriceList priceList = new PriceList();
			for (int i = 0; i < 10; i++)
				priceList.test.add(new Test("Orest", i + 1, "OrestO"));
			JAXBContext context = JAXBContext.newInstance(PriceList.class);
			Marshaller m = context.createMarshaller();
			m.setProperty(Marshaller.JAXB_FORMATTED_OUTPUT, Boolean.TRUE);
			// m.marshal(priceList, System.out);
			m.marshal(priceList, new File("work.xml"));
			System.out.println();

//			FileInputStream fis = new FileInputStream("cofe.xml");
//			JAXBContext jc = JAXBContext.newInstance(PriceList.class
//					.getPackage().getName());
//			PriceList pl = (PriceList) jc.createUnmarshaller().unmarshal(fis);
//			//
//			for (int i = 0; i < pl.test.size(); i++) {
//				Test c = pl.test.get(i);
//				System.out.println("pubI=" + c.pubI + " pubStr" + c.pubStr
//						+ " getPrivStr()=" + c.getPrivStr()
//						+ " getPrivstatfini()=" + c.getPrivstatfini()
//						+ " getPrivStatInt()=" + c.getPrivStatInt());
//			}
		} catch (Exception e) {
			System.out.println("Error");
		} // try

	}
}
